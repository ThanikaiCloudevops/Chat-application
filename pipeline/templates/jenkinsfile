@Library ("my_shared_library") _ 
pipeline{
    agent any

    environment {
        GIT_URL = "https://SciflareIT@bitbucket.org/dpl11-backend/goo-plus.git"
        GIT_BRANCH = "seran_dev"
        IMAGE_NAME = 'sample'
        IMAGE_TAG = 'latest'
        DOCKERFILE_PATH = "Dockerfile"
        APP_DIR = "${WORKSPACE}"
        appName = "my-node-app"
    }
    stages{
        stage("Checkout-Code"){
            steps{
                script{
                    checkoutCode(GIT_URL,GIT_BRANCH)
                }
            }
        }
        stage("Build Node"){
            steps{
                script{
                    dockerbuild(appName: 'my-node-app', appDir: "${APP_DIR}")
                }
            }
        }
    }
}


@Library ("my_shared_library") _ 
pipeline{
    agent {
        label "node-1"
    }

    environment {
        GIT_URL = "https://SciflareIT@bitbucket.org/dpl11-backend/goo-plus.git"
        GIT_BRANCH = "seran_dev"
        IMAGE_NAME = 'gooplus'
        IMAGE_TAG = 'latest'
        DOCKERFILE_PATH = "api/Dockerfile"
        REPO_NAME = "829173323501.dkr.ecr.ap-south-1.amazonaws.com/gooplus:latest"
        // Ansible Environment Varibale to setup servers
        ANSIBLE_SECRET = credentials("AnsibleServer")
    }
    stages{
        stage("Checkout-Code"){
            steps{
                script{
                    checkoutCode.gitcheckout(GIT_URL,GIT_BRANCH)
                }
            }
        }
        stage("Build Docker Image"){
            steps{
                script{
                    dockerbuild.buildimage(IMAGE_NAME,IMAGE_TAG,DOCKERFILE_PATH)
                }
            }
        }
        stage("Push Docker Image into Aws Ecr Repo"){
            steps{
                script{
                    dockerpush.dockerpush(IMAGE_NAME,IMAGE_TAG,REPO_NAME)
                }
            }
        }
        stage("Ansible Server Remote Connection"){
            steps{
                script{
                    sshagent (credentials: ["AnsibleServer"]){
                        sh """
                            ansible --version                        
                        """
                    }
                }
            }
        }
    }
}


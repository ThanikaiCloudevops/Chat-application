@Library ("my_shared_library") _ 
pipeline{
    agent {
        label "node-1"
    }

    environment {
        GIT_URL = "https://SciflareIT@bitbucket.org/dpl11-backend/goo-plus.git"
        GIT_BRANCH = "seran_dev"
        IMAGE_NAME = 'node'
        IMAGE_TAG = 'latest'
        DOCKERFILE_PATH = "api/Dockerfile"
        ECR_REPO_NAME = "gooplusdocker"
        ANSIBLE_PATH = "ansible/ecr_create.yml"
    }
    stages{
        stage("Checkout-Code"){
            steps{
                script{
                    checkoutCode.gitcheckout(GIT_URL,GIT_BRANCH)
                }
            }
        }
        stage("Build Docker Image"){
            steps{
                script{
                    dockerbuild.buildimage(IMAGE_NAME,IMAGE_TAG,DOCKERFILE_PATH,ECR_REPO_NAME,ANSIBLE_PATH)
                }
            }
        }
        stage("Push Docker Image into Aws Ecr Repo"){
            steps{
                script{
                    ansiblePlaybook(
                        playbook: '/playbook/ecr_create.yml',
                        inventory: '/playbook/inventory.ini'
                    )
                }
            }
        }
    }
}

